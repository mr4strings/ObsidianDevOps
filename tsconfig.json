{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./out"
  },
  "include": ["src/**/*.ts"]
}
